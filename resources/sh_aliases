# Aliases
# fs
alias ls='ls -G'
alias ll='ls -l'
alias la='ls -la'
alias ..='cd ..'
alias ...='cd ../..'

function mkcd {
    local target=$1
    mkdir -p "$target"
    cd $target
}

# git
alias gs='git status'
alias gd='git diff'
alias ga='git add'
alias gA='git add -A'
alias gc='git commit'
alias gco='git checkout'
alias gp='git pull'
alias gf='git fetch'
alias gb='git branch'

# erlang
alias rebar='rebar3'

# k8s
alias mk8s='snap run microk8s'
alias mhelm='snap run microk8s helm'
alias mhelm3='snap run microk8s helm3'
alias mkubectl='snap run microk8s kubectl'
